#!/bin/sh
set -euo pipefail

# Environment (Unix)

echo "Upgrading system packages / apps"
brew update
brew upgrade

# Editor (Vim)

echo "Upgrading editor plugins"
vim +PlugUpgrade +PlugUpdate +PlugClean +qall

# Version control (Git)

# Language (Rust)

# Language (JavaScript)

# Operating system (macOS)

echo "Upgrading operating system"
sudo softwareupdate -ia
