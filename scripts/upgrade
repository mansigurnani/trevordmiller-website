#!/bin/sh

# -----------------------------------------------------------------
# Operating system (macOS)
# -----------------------------------------------------------------

echo "Upgrading package manager"
brew update

echo "Upgrading apps"
brew cask upgrade 1password

echo "Upgrading operating system"
sudo softwareupdate -ia

# -----------------------------------------------------------------
# Environment (Unix)
# -----------------------------------------------------------------

echo "Upgrading shell"
brew upgrade zsh
chsh -s $(which zsh)

# -----------------------------------------------------------------
# Version control (Git)
# -----------------------------------------------------------------

echo "Upgrading version control"
brew upgrade git

# -----------------------------------------------------------------
# Editor (Vim)
# -----------------------------------------------------------------

echo "Upgrading editor"
brew upgrade vim

echo "Upgrading editor configuration dotfiles"
cd ~/repos/scripts
git submodule update --remote --merge

# -----------------------------------------------------------------
# Application programming (JavaScript)
# -----------------------------------------------------------------

echo "Upgrading application programming toolchain"
brew upgrade node

# -----------------------------------------------------------------
# Systems programming (Rust)
# -----------------------------------------------------------------

echo "Upgrading systems programming toolchain"
brew upgrade rustup
rustup update

echo "Upgrading static site generator"
brew upgrade zola

# -----------------------------------------------------------------

echo "Finished"
