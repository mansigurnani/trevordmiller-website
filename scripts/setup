#!/bin/sh

# -----------------------------------------------------------------
# Operating system (macOS)
# -----------------------------------------------------------------

echo "Installing package manager"
/usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"

echo "Installing apps"
brew cask install 1password

# -----------------------------------------------------------------
# Environment (Unix)
# -----------------------------------------------------------------

echo "Installing shell"
brew install zsh
sudo sh -c "echo $(which zsh) >> /etc/shells"
chsh -s $(which zsh)

echo "Linking shell configuration dotfile"
ln -s ~/repos/scripts/dotfiles/.zshrc ~/.zshrc

# -----------------------------------------------------------------
# Version control (Git)
# -----------------------------------------------------------------

echo "Installing version control"
brew install git

echo "Linking version control configuration dotfile"
ln -s ~/repos/scripts/dotfiles/.gitconfig ~/.gitconfig

# -----------------------------------------------------------------
# Editor (Vim)
# -----------------------------------------------------------------

echo "Installing editor"
brew install vim

echo "Linking editor configuration dotfiles"
ln -s ~/repos/scripts/dotfiles/.vimrc ~/.vimrc
ln -s ~/repos/scripts/dotfiles/.vim/* ~/.vim/

# -----------------------------------------------------------------
# Application programming (JavaScript)
# -----------------------------------------------------------------

echo "Installing application programming toolchain"
brew install node

# -----------------------------------------------------------------
# Systems programming (Rust)
# -----------------------------------------------------------------

echo "Installing systems programming toolchain"
brew install rustup
rustup-init

# -----------------------------------------------------------------

echo "Finished"
