#!/bin/bash
set -euo pipefail

# ==================================================================
# TERMINAL WORKFLOW
# ==================================================================

DEFAULT_DIRECTORY="$HOME/repos/stack-metrics"
cd "$DEFAULT_DIRECTORY"
tmux new-session -d -s "stack-metrics"

tmux rename-window "background"
tmux send-keys -t 0 C-z "npm run storybook" Enter
tmux splitw
tmux send-keys -t 1 "npm run dev" Enter
tmux splitw
tmux send-keys -t 2 "npm run facade" Enter

tmux new-window -c "$DEFAULT_DIRECTORY"
tmux rename-window "shell"
tmux send-keys -t 0 C-z "git status" Enter

tmux new-window -c "$DEFAULT_DIRECTORY"
tmux rename-window "main"
tmux send-keys -t 0 C-z "vim -c 'E'" Enter

tmux attach-session -d
